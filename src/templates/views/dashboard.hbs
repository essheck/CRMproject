{{>header}}

{{!-- navbar --}}
{{>navbar}}
{{!-- navbar end--}}
<div class="columns is-variable is-0"> 
    
    {{!-- sidebar --}}
{{>sidemenu}}

    {{!-- dashboard --}}
    <div class="column is-10-desktop is-offset-2-desktop is-9-tablet is-offset-3-tablet is-12-mobile dashboard">
        <div class="p-3">
            <div class="columns is-variable is-desktop">
                <div class="column">
                    <h1 class="title">Dashboard</h1>
                </div>
            </div>
            <div class="columns is-variable is-desktop">
                <div class="column">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header-title">
                                Total Customers
                            </div>
                            <div class="card-content">
                                <p class="is-size-3">{{dashboardData.count}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header-title">
                                Total Sales
                            </div>
                            <div class="card-content">
                                <p class="is-size-3">{{dashboardData.sales}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                                {{#if dashboardData.est}}
                <div class="column">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-header-title">
                                Estimated Revenue
                            </div>
                            <div class="card-content">
                                <p class="is-size-3">{{dashboardData.est}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                                {{/if}}

            </div>
            <div class="columns is-variable is-dektop">
                <div class="column is-two-thirds">
                    <div>
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ["Total Customers" , "Leads" , "Prospects" , "Sales"],
      datasets: [{
        label: '# of Customers',
        data: [ {{dashboardData.totalleads}} , 
                {{dashboardData.totalleads}} - ({{dashboardData.prospects}} + {{dashboardData.salescnt}}) ,
                {{dashboardData.prospectcnt}} , 
                {{dashboardData.salescnt}}
                ],
        borderWidth: 1,
        borderColor: [ '#000000', '#000000' , '#000000' , '#000000'
        ],
        backgroundColor: [ '#9966FF' , '#36A2EB' , '#FFCC66' , '#66CCCC'] 
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
 

